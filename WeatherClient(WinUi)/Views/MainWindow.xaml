<Window
    x:Class="WeatherClient.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:WeatherClient.ViewModels"
    xmlns:scott="using:ScottPlot.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="Погода">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <!-- DataTemplates -->
                <DataTemplate x:Key="CurrentWeatherTemplate">
                    <Grid RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.4*"/>
                                <ColumnDefinition Width="0.6*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" MinHeight="320">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding City}" FontSize="28" FontWeight="SemiBold"
                                                   VerticalAlignment="Center" Opacity="0.95" Foreground="White"/>

                                        <Button Grid.Column="1" Style="{StaticResource RevealButtonStyle}"
                                                Width="44" Height="44" CornerRadius="22">
                                            <Button.Flyout>
                                                <Flyout Placement="Bottom" ShowMode="Transient">
                                                    <AutoSuggestBox Width="280" PlaceholderText="Поиск города"
                                                                    Text="{Binding City, Mode=TwoWay}"
                                                                    ItemsSource="{Binding CitySuggestions}"
                                                                    CornerRadius="8" Padding="12,8" FontSize="14"
                                                                    TextChanged="CityAutoSuggestBox_TextChanged"
                                                                    QuerySubmitted="CityAutoSuggestBox_QuerySubmitted">
                                                        <AutoSuggestBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Height="40">
                                                                    <TextBlock Text="{Binding CityName}" VerticalAlignment="Center"
                                                                               FontSize="14" Margin="12,0,0,0"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </AutoSuggestBox.ItemTemplate>
                                                    </AutoSuggestBox>
                                                </Flyout>
                                            </Button.Flyout>
                                            <FontIcon Glyph="&#xE721;" FontSize="16" Opacity="0.8" Foreground="White"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <animatedvisuals:AnimatedVisualPlayer x:Name="WeatherAnimationPlayer" Width="120" Height="120"
                                                                              Source="{Binding CurrentWeatherAnimation}" AutoPlay="True" 
                                                                              HorizontalAlignment="Center"
                                                                              Visibility="{Binding CurrentWeatherAnimation, Converter={StaticResource NullToVisibilityConverter}}"/>

                                        <Image Source="{Binding IconUrl}" Width="100" Height="100" Opacity="0.9"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding CurrentWeatherAnimation, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                                        <TextBlock Text="{Binding Temperature}" FontSize="56" FontWeight="Light" 
                                                   HorizontalAlignment="Center" Opacity="0.95" Foreground="White"/>
                                        <TextBlock Text="{Binding Description}" FontSize="18" HorizontalAlignment="Center" 
                                                   Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="{Binding CurrentDateTime}" FontSize="13" HorizontalAlignment="Center" 
                                                   Opacity="0.7" Foreground="#E0FFFFFF"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Grid Grid.Column="1" RowSpacing="12" ColumnSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE909;" FontSize="28" Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="Ветер" FontSize="11" Opacity="0.7" Foreground="#E0FFFFFF"/>
                                        <TextBlock Text="{Binding WindSpeed}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE706;" FontSize="28" Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="УФ-индекс" FontSize="11" Opacity="0.7" Foreground="#E0FFFFFF"/>
                                        <TextBlock Text="{Binding UvIndexValue}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE706;" FontSize="28" Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="Восход/Закат" FontSize="11" Opacity="0.7" Foreground="#E0FFFFFF"/>
                                        <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="White">
                                            <Run Text="{Binding Sunrise}"/><Run Text="/"/><Run Text="{Binding Sunset}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE7BE;" FontSize="28" Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="Влажность" FontSize="11" Opacity="0.7" Foreground="#E0FFFFFF"/>
                                        <TextBlock Text="{Binding HumidityValue}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE9A6;" FontSize="28" Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="Ощущается как" FontSize="11" Opacity="0.7" Foreground="#E0FFFFFF"/>
                                        <TextBlock Text="{Binding FeelsLikeValue}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE7B3;" FontSize="28" Opacity="0.8" Foreground="White"/>
                                        <TextBlock Text="Видимость" FontSize="11" Opacity="0.7" Foreground="#E0FFFFFF"/>
                                        <TextBlock Text="{Binding VisibilityValue}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1" Margin="0,16,0,0" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.45*"/>
                                <ColumnDefinition Width="0.55*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="12,16,12,16">
                                <StackPanel>
                                    <TextBlock Text="Прогноз на 7 дней" FontSize="16" FontWeight="SemiBold" 
                                               Margin="0,0,0,12" Foreground="White"/>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="220">
                                        <ItemsControl ItemsSource="{Binding DailyForecasts}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="128" CornerRadius="12" Background="#20000000" 
                                                            BorderBrush="#40FFFFFF" BorderThickness="1" Padding="10" Margin="0,0,8,0">
                                                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                                                            <TextBlock Text="{Binding DayName}" FontSize="13" FontWeight="SemiBold" 
                                                                       Foreground="White" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="{Binding DateDisplay}" FontSize="11" 
                                                                       Foreground="#E0FFFFFF" HorizontalAlignment="Center"/>
                                                            <Image Source="{Binding IconUrl}" Width="44" Height="44" 
                                                                   HorizontalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Description}" FontSize="11" 
                                                                       TextWrapping="Wrap" TextAlignment="Center" Foreground="#E0FFFFFF"/>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                                                        Spacing="6" Margin="0,6,0,0">
                                                                <StackPanel Spacing="0">
                                                                    <TextBlock Text="Max" FontSize="9" Foreground="#E0FFFFFF"/>
                                                                    <TextBlock Text="{Binding MaxTempStr}" FontSize="15" 
                                                                               FontWeight="SemiBold" Foreground="White"/>
                                                                </StackPanel>
                                                                <Rectangle Width="1" Fill="#40FFFFFF" Opacity="0.6"/>
                                                                <StackPanel Spacing="0">
                                                                    <TextBlock Text="Min" FontSize="9" Foreground="#E0FFFFFF"/>
                                                                    <TextBlock Text="{Binding MinTempStr}" FontSize="15" 
                                                                               FontWeight="SemiBold" Foreground="#E0FFFFFF"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="0" MinHeight="240">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Почасовой прогноз" FontSize="16" FontWeight="SemiBold" 
                                               Margin="16,16,16,8" Foreground="White"/>

                                    <Border Grid.Row="1" Margin="8" CornerRadius="8" Background="Transparent">
                                        <scott:WinUIPlot x:Name="HourlyPlot" Height="180"
                                                         Background="Transparent" Loaded="HourlyPlot_Loaded"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="ChartsTemplate">
                    <Grid Padding="0,24,0,0">
                        <Border Style="{StaticResource CardStyle}" Padding="24">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Температура на 3 дня" FontSize="24" FontWeight="SemiBold" 
                                           Foreground="White"/>
                                <Border Height="400" CornerRadius="8" Background="Transparent" Padding="4">
                                    <scott:WinUIPlot x:Name="TemperatureChart" Background="Transparent" 
                                                     Loaded="TemperatureChart_Loaded"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="FavoritesTemplate">
                    <ScrollViewer Padding="0,24,0,0">
                        <Grid HorizontalAlignment="Center" MaxWidth="600">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,24" Spacing="8">
                                <TextBlock Text="Последние города" FontSize="20" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding SearchHistory}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}" 
                                                    Command="{Binding ElementName=ContentFrame, Path=DataContext.LoadCityFromHistoryCommand}" 
                                                    CommandParameter="{Binding}" CornerRadius="16" Padding="12,6" 
                                                    Background="Transparent" BorderThickness="0" FontSize="13"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Избранные города" FontSize="20" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,12"/>
                                <ItemsControl Grid.Row="1" ItemsSource="{Binding FavoriteCities}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" Spacing="12"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource CardStyle}" Padding="16">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0" Content="{Binding}" 
                                                            Command="{Binding ElementName=ContentFrame, Path=DataContext.LoadCityFromFavoritesCommand}" 
                                                            CommandParameter="{Binding}" HorizontalAlignment="Stretch" 
                                                            HorizontalContentAlignment="Left" Background="Transparent" 
                                                            BorderThickness="0" FontSize="16"/>
                                                    <Button Grid.Column="1" 
                                                            Command="{Binding ElementName=ContentFrame, Path=DataContext.RemoveFromFavoritesCommand}" 
                                                            CommandParameter="{Binding}" Background="Transparent" 
                                                            BorderThickness="0" Padding="8" 
                                                            ToolTipService.ToolTip="Удалить из избранного">
                                                        <FontIcon Glyph="&#xE74D;" Foreground="Red" FontSize="14"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </DataTemplate>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- НАВИГАЦИОННАЯ ПАНЕЛЬ -->
        <Grid Grid.Row="1" Grid.Column="0" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Center"
              Margin="20,40,0,40">
            <Border Style="{ThemeResource NavigationPanelStyle}" Width="90" MinHeight="200" CornerRadius="24">
                <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="WeatherButton" Style="{StaticResource NavigationButtonStyle}" 
                            Click="WeatherButton_Click" ToolTipService.ToolTip="Погода">
                        <FontIcon Glyph="&#xE909;" FontSize="20" HorizontalAlignment="Center"/>
                    </Button>

                    <Button Style="{StaticResource NavigationButtonStyle}" 
                            Command="{Binding ToggleSettingsPanelCommand}"
                            ToolTipService.ToolTip="Настройки">
                        <FontIcon Glyph="&#xE713;" FontSize="20" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ПАНЕЛЬ НАСТРОЕК -->
        <Grid Grid.Row="1" Grid.Column="1" 
              Padding="20,20,20,20"
              Visibility="{Binding IsSettingsPanelOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Style="{ThemeResource CardStyle}">
                <ScrollViewer>
                    <StackPanel Spacing="20" Padding="20">
                        <TextBlock Text="Настройки" FontSize="24" FontWeight="Bold" Foreground="White"/>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Единица температуры" FontSize="16" Foreground="White"/>
                            <ComboBox SelectedIndex="{Binding SelectedTempUnit, Mode=TwoWay, Converter={StaticResource EnumToIntConverter}}">
                                <ComboBoxItem Content="Цельсий (°C)"/>
                                <ComboBoxItem Content="Фаренгейт (°F)"/>
                                <ComboBoxItem Content="Кельвин (K)"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Скорость ветра" FontSize="16" Foreground="White"/>
                            <ComboBox SelectedIndex="{Binding SelectedWindUnit, Mode=TwoWay, Converter={StaticResource EnumToIntConverter}}">
                                <ComboBoxItem Content="Метры/сек"/>
                                <ComboBoxItem Content="Километры/час"/>
                                <ComboBoxItem Content="Узлы"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- ✅ ПЕРЕКЛЮЧАТЕЛЬ ТЕМЫ -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Тема" FontSize="16" Foreground="White"/>
                            <ComboBox SelectedIndex="{Binding SelectedTheme, Mode=TwoWay, Converter={StaticResource EnumToIntConverter}}">
                                <ComboBoxItem Content="Светлая"/>
                                <ComboBoxItem Content="Тёмная"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ОСНОВНОЙ КОНТЕНТ -->
        <Grid Grid.Row="1" Grid.Column="1" 
              Padding="20,20,20,20"
              Visibility="{Binding IsSettingsPanelOpen, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Frame x:Name="ContentFrame">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition>
                            <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                <EntranceNavigationTransitionInfo/>
                            </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                        </NavigationThemeTransition>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </Grid>
    </Grid>
</Window>
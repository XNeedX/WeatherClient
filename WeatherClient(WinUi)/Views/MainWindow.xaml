<Window
    x:Class="WeatherClient.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:WeatherClient.ViewModels"
    xmlns:models="using:WeatherClient.Models"
    xmlns:scott="using:ScottPlot.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="WeatherClient">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <Grid Background="{StaticResource AppBackgroundAcrylic}">
        <Grid.Resources>
            <ResourceDictionary>
                <!-- DataTemplates -->
                <DataTemplate x:Key="CurrentWeatherTemplate">
                    <Grid RowSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.4*"/>
                                <ColumnDefinition Width="0.6*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Главная карточка погоды -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" MinHeight="320">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding City}" 
                                                   FontSize="28" 
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Opacity="0.9"/>

                                        <Button Grid.Column="1" 
                                                Style="{StaticResource RevealButtonStyle}"
                                                Width="44" Height="44"
                                                CornerRadius="22">
                                            <Button.Flyout>
                                                <Flyout Placement="Bottom" ShowMode="Transient">
                                                    <AutoSuggestBox Width="280" 
                                                                    PlaceholderText="Поиск города" 
                                                                    Text="{Binding City, Mode=TwoWay}"
                                                                    ItemsSource="{Binding CitySuggestions}"
                                                                    TextMemberPath="CityName"
                                                                    CornerRadius="8"
                                                                    Padding="12,8"
                                                                    FontSize="14"
                                                                    TextChanged="CityAutoSuggestBox_TextChanged"
                                                                    QuerySubmitted="CityAutoSuggestBox_QuerySubmitted">
                                                        <AutoSuggestBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Height="40">
                                                                    <TextBlock Text="{Binding CityName}" 
                                                                               VerticalAlignment="Center"
                                                                               FontSize="14"
                                                                               Margin="12,0,0,0"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </AutoSuggestBox.ItemTemplate>
                                                    </AutoSuggestBox>
                                                </Flyout>
                                            </Button.Flyout>
                                            <FontIcon Glyph="&#xE721;" FontSize="16" Opacity="0.8"/>
                                        </Button>
                                    </Grid>

                                    <!-- АНИМИРОВАННАЯ ИКОНКА ПОГОДЫ -->
                                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <animatedvisuals:AnimatedVisualPlayer 
                                            x:Name="WeatherAnimationPlayer"
                                            Width="120" 
                                            Height="120"
                                            Source="{Binding CurrentWeatherAnimation}"
                                            AutoPlay="True"
                                            HorizontalAlignment="Center"
                                            Visibility="{Binding CurrentWeatherAnimation, Converter={StaticResource NullToVisibilityConverter}}"/>

                                        <!-- Резервная статичная иконка -->
                                        <Image Source="{Binding IconUrl}" 
                                               Width="100" 
                                               Height="100" 
                                               Opacity="0.9"
                                               Visibility="{Binding CurrentWeatherAnimation, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                                        <TextBlock Text="{Binding Temperature}" FontSize="56" FontWeight="Light" HorizontalAlignment="Center" Opacity="0.95"/>
                                        <TextBlock Text="{Binding Description}" FontSize="18" HorizontalAlignment="Center" Opacity="0.8"/>
                                        <TextBlock Text="{Binding CurrentDateTime}" FontSize="13" Foreground="{ThemeResource TextFillColorSecondary}" HorizontalAlignment="Center" Opacity="0.7"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Карточки метрик -->
                            <Grid Grid.Column="1" RowSpacing="12" ColumnSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE909;" FontSize="28" Opacity="0.8"/>
                                        <TextBlock Text="Wind Status" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" Opacity="0.7"/>
                                        <TextBlock Text="{Binding WindSpeed}" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE706;" FontSize="28" Opacity="0.8"/>
                                        <TextBlock Text="UV Index" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" Opacity="0.7"/>
                                        <TextBlock Text="{Binding UvIndex}" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE706;" FontSize="28" Opacity="0.8"/>
                                        <TextBlock Text="Sunrise &amp; Sunset" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" Opacity="0.7"/>
                                        <TextBlock FontSize="14" FontWeight="SemiBold">
                                            <Run Text="{Binding Sunrise}"/><Run Text="/"/><Run Text="{Binding Sunset}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE7BE;" FontSize="28" Opacity="0.8"/>
                                        <TextBlock Text="Humidity" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" Opacity="0.7"/>
                                        <TextBlock Text="{Binding Humidity}" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE9A6;" FontSize="28" Opacity="0.8"/>
                                        <TextBlock Text="Feels Like" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" Opacity="0.7"/>
                                        <TextBlock Text="{Binding FeelsLike}" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource CardStyle}">
                                    <StackPanel Spacing="6">
                                        <FontIcon Glyph="&#xE7B3;" FontSize="28" Opacity="0.8"/>
                                        <TextBlock Text="Visibility" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" Opacity="0.7"/>
                                        <TextBlock Text="{Binding Visibility}" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Прогнозы -->
                        <Grid Grid.Row="1" Margin="0,16,0,0" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.45*"/>
                                <ColumnDefinition Width="0.55*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 7 DAYS FORECAST -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="12,16,12,16">
                                <StackPanel>
                                    <TextBlock Text="7 days Forecast" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="200">
                                        <ItemsControl ItemsSource="{Binding DailyForecasts}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="128" CornerRadius="12" Background="Transparent" BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="1" Padding="10" Margin="0,0,8,0">
                                                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                                                            <TextBlock Text="{Binding DayName}" FontSize="13" FontWeight="SemiBold" Foreground="{ThemeResource SystemAccentColor}" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="{Binding DateDisplay}" FontSize="11" Foreground="{ThemeResource TextFillColorSecondary}" HorizontalAlignment="Center"/>
                                                            <Image Source="{Binding IconUrl}" Width="44" Height="44" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Description}" FontSize="11" TextWrapping="Wrap" TextAlignment="Center" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="6" Margin="0,6,0,0">
                                                                <StackPanel Spacing="0">
                                                                    <TextBlock Text="Max" FontSize="9" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                                                    <TextBlock Text="{Binding MaxTempStr}" FontSize="15" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimary}"/>
                                                                </StackPanel>
                                                                <Rectangle Width="1" Fill="{ThemeResource DividerStrokeColorDefault}" Opacity="0.6"/>
                                                                <StackPanel Spacing="0">
                                                                    <TextBlock Text="Min" FontSize="9" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                                                    <TextBlock Text="{Binding MinTempStr}" FontSize="15" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <!-- ЧАСОВОЙ ГРАФИК -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="0" MinHeight="240">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Hourly Forecast" FontSize="16" FontWeight="SemiBold" Margin="16,16,16,8"/>

                                    <Border Grid.Row="1" Margin="8" CornerRadius="8" Background="Transparent">
                                        <scott:WinUIPlot x:Name="HourlyPlot" 
                                                         Height="180"
                                                         Background="Transparent"
                                                         Loaded="HourlyPlot_Loaded"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </DataTemplate>

                <!-- Остальные шаблоны -->
                <DataTemplate x:Key="ChartsTemplate">
                    <Grid Padding="0,24,0,0">
                        <Border Style="{StaticResource CardStyle}" Padding="24">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Прогноз на 3 дня" FontSize="24" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimary}"/>
                                <Border Height="400" CornerRadius="8" Background="Transparent" Padding="4">
                                    <scott:WinUIPlot x:Name="TemperatureChart"
                                                     Background="Transparent"
                                                     Loaded="TemperatureChart_Loaded"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="FavoritesTemplate">
                    <ScrollViewer Padding="0,24,0,0">
                        <Grid HorizontalAlignment="Center" MaxWidth="600">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,24" Spacing="8">
                                <TextBlock Text="Последние города" FontSize="20" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimary}" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding SearchHistory}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}" Command="{Binding ElementName=ContentFrame, Path=DataContext.LoadCityFromHistoryCommand}" CommandParameter="{Binding}" CornerRadius="16" Padding="12,6" Background="Transparent" BorderThickness="0" FontSize="13"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding FavoriteCities}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Spacing="12"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyle}" Padding="16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0" Content="{Binding}" Command="{Binding ElementName=ContentFrame, Path=DataContext.LoadCityFromFavoritesCommand}" CommandParameter="{Binding}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0" FontSize="16"/>
                                                <Button Grid.Column="1" Command="{Binding ElementName=ContentFrame, Path=DataContext.RemoveFromFavoritesCommand}" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="8" ToolTipService.ToolTip="Удалить из избранного">
                                                    <FontIcon Glyph="&#xE74D;" Foreground="Red" FontSize="14"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ScrollViewer>
                </DataTemplate>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Навигационная панель -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="80" Style="{StaticResource NavigationPanelStyle}">
                <StackPanel Spacing="16">
                    <Button x:Name="WeatherButton" Style="{StaticResource NavigationButtonStyle}" Background="{ThemeResource SystemAccentColor}" Click="WeatherButton_Click" ToolTipService.ToolTip="Погода">
                        <FontIcon Glyph="&#xE909;" FontSize="20"/>
                    </Button>
                    <Button x:Name="SettingsButton" Style="{StaticResource NavigationButtonStyle}" Background="Transparent" Click="SettingsButton_Click" ToolTipService.ToolTip="Настройки">
                        <FontIcon Glyph="&#xE713;" FontSize="20"/>
                    </Button>
                </StackPanel>
            </Border>

            <Frame x:Name="ContentFrame" Grid.Column="1" Padding="20">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition>
                            <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                <EntranceNavigationTransitionInfo/>
                            </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                        </NavigationThemeTransition>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </Grid>
    </Grid>
</Window>
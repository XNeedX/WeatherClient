<Window
    x:Class="WeatherClient.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:WeatherClient.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media" 
    mc:Ignorable="d"
    Title="Погода">

    <Grid x:Name="ContentGrid"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          MaxWidth="500"
          Padding="30"
          Background="#FFEDF2F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,30">
            <TextBox Width="320"
                     PlaceholderText="Введите город"
                     Text="{Binding City, Mode=TwoWay}"
                     FontSize="18"
                     CornerRadius="8"
                     Padding="12,8"
                     BorderThickness="1"
                     BorderBrush="#FFBBDEFB"
                     Background="#FAFFFFFF"/>
            <Button Command="{Binding GetWeatherCommand}"
                    FontSize="18"
                    Width="60"
                    Height="44"
                    CornerRadius="8"
                    Background="#FF2196F3"
                    Foreground="White"
                    ToolTipService.ToolTip="Обновить погоду">
                <FontIcon Glyph="&#xE72C;" FontFamily="Segoe MDL2 Assets" />
            </Button>
        </StackPanel>

        <Border Grid.Row="1"
                Background="#FFFFFF" BorderBrush="#FFBBDEFB"
                BorderThickness="1"
                CornerRadius="16"
                Padding="25"
                VerticalAlignment="Top"
                MaxWidth="450">

            <StackPanel HorizontalAlignment="Center" Spacing="25">

                <Image Source="{Binding IconUrl}" 
                       Height="140"
                       Width="140"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Temperature}"
                               FontSize="72"
                               FontWeight="Light"
                               Foreground="#FF2196F3"
                               VerticalAlignment="Center"
                               Margin="0,-10,0,0"/>
                    <StackPanel VerticalAlignment="Center" Spacing="5">
                        <TextBlock Text="{Binding City}"
                                   FontSize="32"
                                   FontWeight="SemiBold"
                                   Foreground="#FF212121"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="200"/>
                        <TextBlock Text="{Binding Description}"
                                   FontSize="18"
                                   Foreground="#FF616161"/>
                    </StackPanel>
                </StackPanel>

                <Rectangle Height="1" Fill="#FFEEEEEE" Margin="0,15,0,15"/>

                <Grid ColumnSpacing="40" RowSpacing="25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0" Grid.Row="0">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xE7BE;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FF2196F3"/>
                            <TextBlock Text="Влажность" FontSize="15" FontWeight="SemiBold" Foreground="#FF424242"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Humidity}" FontSize="20" FontWeight="Medium" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="0">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xE715;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FF2196F3"/>
                            <TextBlock Text="Давление" FontSize="15" FontWeight="SemiBold" Foreground="#FF424242"/>
                        </StackPanel>
                        <TextBlock Text="Давление" FontSize="15" FontWeight="SemiBold" Foreground="#FF424242"/>
                        <TextBlock Text="{Binding Pressure}" FontSize="20" FontWeight="Medium" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xE82D;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FF2196F3"/>
                            <TextBlock Text="Скорость ветра" FontSize="15" FontWeight="SemiBold" Foreground="#FF424242"/>
                        </StackPanel>
                        <TextBlock Text="{Binding WindSpeed}" FontSize="20" FontWeight="Medium" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xEC4A;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FF2196F3"/>
                            <TextBlock Text="Восход" FontSize="15" FontWeight="SemiBold" Foreground="#FF424242"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Sunrise}" FontSize="20" FontWeight="Medium" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <FontIcon Glyph="&#xEC4B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FF2196F3"/>
                            <TextBlock Text="Закат" FontSize="15" FontWeight="SemiBold" Foreground="#FF424242"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Sunset}" FontSize="20" FontWeight="Medium" Margin="0,5,0,0"/>
                    </StackPanel>

                </Grid>
            </StackPanel>
        </Border>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentGrid.MaxWidth" Value="380"/>
                        <Setter Target="ContentGrid.Padding" Value="15"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Window>
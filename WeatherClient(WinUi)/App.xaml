<Application
    x:Class="WeatherClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherClient"
    xmlns:converters="using:WeatherClient.Converters"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    xmlns:lottie="using:CommunityToolkit.WinUI.Lottie"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ✅ ЦВЕТОВЫЕ РЕСУРСЫ ДЛЯ ДИНАМИЧЕСКОЙ ТЕМЫ -->
            <Color x:Key="BackgroundColor">#62B0DD</Color>
            <Color x:Key="CardColor1">#62B0DD</Color>
            <Color x:Key="CardColor2">#59A6D7</Color>
            <Color x:Key="CardColor3">#529DC9</Color>

            <!-- Цвета для темной темы -->
            <Color x:Key="DarkBackgroundColor">#09316F</Color>
            <Color x:Key="DarkCardColor">#0B3788</Color>

            <!-- Градиент для фона -->
            <media:LinearGradientBrush x:Key="AppBackgroundGradient" 
                                       StartPoint="0,0" 
                                       EndPoint="0,1">
                <GradientStop Color="{ThemeResource BackgroundColor}" Offset="0.0"/>
                <GradientStop Color="#4AC3EB" Offset="0.5"/>
                <GradientStop Color="{ThemeResource CardColor3}" Offset="1.0"/>
            </media:LinearGradientBrush>

            <!-- Градиент для карточек (динамический) -->
            <media:LinearGradientBrush x:Key="CardGradientBrush" 
                                       StartPoint="0,0" 
                                       EndPoint="1,1">
                <GradientStop Color="{ThemeResource CardColor1}" Offset="0.0"/>
                <GradientStop Color="{ThemeResource CardColor2}" Offset="0.5"/>
                <GradientStop Color="{ThemeResource CardColor3}" Offset="1.0"/>
            </media:LinearGradientBrush>

            <!-- Фон для внутренних карточек прогноза -->
            <media:SolidColorBrush x:Key="ForecastItemBackgroundBrush" Color="#20000000"/>

            <!-- Конвертеры -->
            <converters:FavoriteIconConverter x:Key="FavoriteIconConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:EnumToIntConverter x:Key="EnumToIntConverter"/>
            <!-- ✅ Исправлен конвертер -->

            <!-- АНИМАЦИИ -->
            <lottie:LottieVisualSource x:Key="SunnyAnimation" UriSource="ms-appx:///Assets/WeatherAnimations/sunny.json"/>
            <lottie:LottieVisualSource x:Key="CloudyAnimation" UriSource="ms-appx:///Assets/WeatherAnimations/cloudy.json"/>
            <lottie:LottieVisualSource x:Key="PartlyCloudyAnimation" UriSource="ms-appx:///Assets/WeatherAnimations/partly_cloudy.json"/>
            <lottie:LottieVisualSource x:Key="RainyAnimation" UriSource="ms-appx:///Assets/WeatherAnimations/rainy.json"/>
            <lottie:LottieVisualSource x:Key="SnowyAnimation" UriSource="ms-appx:///Assets/WeatherAnimations/snowy.json"/>
            <lottie:LottieVisualSource x:Key="ThunderAnimation" UriSource="ms-appx:///Assets/WeatherAnimations/thunder.json"/>

            <!-- СТИЛИ С ThemeResource -->
            <Style TargetType="Border" x:Key="CardStyle">
                <Setter Property="Background" Value="{ThemeResource CardGradientBrush}"/>
                <!-- ✅ ThemeResource -->
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#40FFFFFF"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Transitions">
                    <Setter.Value>
                        <TransitionCollection>
                            <EntranceThemeTransition FromVerticalOffset="50"/>
                        </TransitionCollection>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Border" x:Key="NavigationPanelStyle">
                <Setter Property="Background" Value="{ThemeResource CardGradientBrush}"/>
                <!-- ✅ ThemeResource -->
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="CornerRadius" Value="0,24,24,0"/>
                <Setter Property="Padding" Value="8,20,8,20"/>
            </Style>

            <Style TargetType="Button" x:Key="NavigationButtonStyle">
                <Setter Property="Width" Value="48"/>
                <Setter Property="Height" Value="48"/>
                <Setter Property="CornerRadius" Value="24"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style TargetType="Button" x:Key="RevealButtonStyle">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>